{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": [
		"env.d.ts",
		"src/**/*",
		"src/**/*.*",
		"src/idl/*.json",
		"src/stores/*.*",
		"src/routes/*.*",
		"src/views/**/*.*",
		"scr/components"
	],
	"exclude": [
		"src/**/__tests__/*"
	],
	"compilerOptions": {
		"moduleResolution": "node",
		"composite": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	}
}
